# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@your-production-db-host:5432/pmarchitect_prod"

# Backend AI
GEMINI_API_KEY=""
CORS_ORIGINS="https://your-domain.com, http://localhost:3000"
GEMINI_MODEL="gemini-1.5-flash"
NEXT_PUBLIC_BACKEND_URL="https://your-backend-host:8001"
USE_DUMMY_AGENTS="false"
USE_RESEARCHER="true"
USE_VALIDATOR="true"
VALIDATOR_MODEL="gemini-1.5-pro"

# NextAuth Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-production-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Optional: Email Provider (if you want to add email authentication)
# EMAIL_SERVER_HOST="smtp.gmail.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-email@gmail.com"
# EMAIL_SERVER_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@your-domain.com"

# Production Settings
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
